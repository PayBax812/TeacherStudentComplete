ðŸ§© js/llm-script.js
const $ = (sel, root = document) => root.querySelector(sel);
const $$ = (sel, root = document) => [...root.querySelectorAll(sel)];

function setActiveTab(id){
  $$(".tab-link").forEach(btn=>{
    const on = btn.dataset.tab === id;
    btn.classList.toggle("active", on);
    btn.setAttribute("aria-selected", String(on));
  });
  $$(".tab-content").forEach(p=>{
    const on = p.id === id;
    p.classList.toggle("active", on);
    p.toggleAttribute("hidden", !on);
  });
  if(history.replaceState) history.replaceState(null,"",`#${id}`);
}

function initTabs(){
  $$(".tab-link").forEach(btn=>{
    btn.addEventListener("click", ()=>setActiveTab(btn.dataset.tab));
    btn.addEventListener("keydown", e=>{
      if(!["ArrowLeft","ArrowRight"].includes(e.key)) return;
      const buttons = $$(".tab-link");
      const i = buttons.indexOf(document.activeElement);
      const next = e.key==="ArrowRight" ? (i+1)%buttons.length : (i-1+buttons.length)%buttons.length;
      buttons[next].focus();
      setActiveTab(buttons[next].dataset.tab);
    });
  });
  const fromHash = location.hash?.slice(1);
  setActiveTab(fromHash && $(`#${fromHash}`) ? fromHash : "ai-search");
}

function initAISearch(){
  const input=$("#ai-query"), button=$("#ai-submit"), scope=$("#ai-scope"), results=$("#results");
  const render = (q)=> results.innerHTML = q
    ? `<div><div class="small text-muted mb-2">Scope: <strong>${scope.value}</strong></div><div><strong>Query:</strong> ${q}</div><hr/><div class="text-muted">[Mock] This is where AI search results will render.</div></div>`
    : `<p class="placeholder-text">Results will appear here...</p>`;
  button.addEventListener("click", ()=>render(input.value.trim()));
  input.addEventListener("keydown", e=>{ if(e.key==="Enter"){ e.preventDefault(); render(input.value.trim()); }});
}

function initEmailTagging(){
  $$(".mail-tab").forEach(tab=>{
    tab.addEventListener("click", ()=>{
      $$(".mail-tab").forEach(t=>t.classList.remove("active"));
      tab.classList.add("active");
    });
  });
  $("#check-all")?.addEventListener("change", ()=>{
    $$("#mail-body input[type='checkbox']").forEach(cb=> cb.checked = $("#check-all").checked);
  });
  $("#tag-add")?.addEventListener("click", ()=>{
    $$("#mail-body tr").forEach(row=>{
      const cb = $("input[type='checkbox']", row);
      if(cb?.checked) row.classList.add("tagged");
    });
  });
  $("#tag-remove")?.addEventListener("click", ()=>{
    $$("#mail-body tr").forEach(row=>{
      const cb = $("input[type='checkbox']", row);
      if(cb?.checked) row.classList.remove("tagged");
    });
  });
  $("#mail-search")?.addEventListener("input", (e)=>{
    const q = e.target.value.toLowerCase();
    $$("#mail-body tr").forEach(row=>{
      const subject = row.children[1].textContent.toLowerCase();
      row.style.display = subject.includes(q) ? "" : "none";
    });
  });
}

document.addEventListener("DOMContentLoaded", ()=>{
  initTabs();
  initAISearch();
  initEmailTagging();
});
